{% comment %} ---- CSS ---- {% endcomment %}
<style>
    .banner-wrapper
    {
        position: relative;
        overflow: hidden;
        padding: 0 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 500px;
        background-color: {{ section.settings.background_color }};
        {%- if section.settings.background_image != blank -%}
            background-image: url('{{ section.settings.background_image | image_url: width: 1440 }}');
        {%- else -%}
            background-image: url("{{ 'converted-image.jpg' | asset_url }}");
        {%- endif -%}

        /* Melhora a exibição da imagem de fundo */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
    .banner-content-wrapper
    {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        width: 100%;
        max-width: 1440px;
        gap: 15px;
        margin-left: 50px;
        margin-bottom: 20px;
        z-index: 1;
    }
    .banner-text-wrapper
    {
        max-width: 595px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        z-index: 1;
    }
    .reviews-text
    {
        padding: 0 0px;
        font-size: 16px;
        font-weight: 500;
        color: #ffffff;
        margin: 0 0 5px 0;
        align-items: left;
        z-index: 1;
    }
    .banner-stars
    {
        color: #FFB800CC;
        margin-left: 8px;
        font-size: 12px;
        z-index: 1;
    }
    .main-heading
    {
        font-size: 48px;
        font-weight: bold;
        line-height: 0.95;
        margin: 0 0 10px 0;
        z-index: 1;
    }
    .subheading
    {
        font-size: 18px;
        line-height: 1.5;
        margin: 0 0 30px 0;
        opacity: 0.9;
        z-index: 1;
    }
    .banner-button
    {
        display: inline-block;
        padding :15px 40px;
        border-radius: 50px;
        text-decoration: none;
        font-size: 20px;
        transform: translateY(20px);
        transition: transform 0.3s ease;
        z-index: 1;
    }
    .banner-button:hover
    {
        transform: translateY(20px) scale(1.1);
    }
    .banner-image-content
    {
        flex-shrink: 0;
    }
    .banner-main-image
    {
        max-width: 1440px;
        height: 506px;
    }
</style>

{% comment %} ---- HTML ---- {% endcomment %}
 <div class="banner-wrapper">
  <div class="banner-content-wrapper">
    <div class="banner-text-content">
      {% if section.settings.reviews_text != blank %}
        <p class="reviews-text">
          {{ section.settings.reviews_text }}
        <span class="banner-stars">★★★★★</span>
        </p>
      {% endif %}

      {% if section.settings.main_heading != blank %}
        <h1 class="main-heading" style="color: {{ section.settings.text_color }};">
          {{ section.settings.main_heading }}
        </h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="subheading" style="color: {{ section.settings.text_color }};">
          {{ section.settings.subheading }}
        </p>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="banner-button" style="background-color: {{ section.settings.button_color }}; color: {{ section.settings.button_text_color }};">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>

    {% if section.settings.main_image != blank %}
      <div class="banner-image-content">
        <img
          src="{{ section.settings.main_image | image_url: width: 600 }}"
          alt="{{ section.settings.main_image.alt | default: 'Banner image' }}"
          class="main-image"
          loading="lazy"
          width="600"
          height="{{ 600 | divided_by: section.settings.main_image.aspect_ratio | round }}"
        >
      </div>
    {% endif %}
  </div>
</div>

