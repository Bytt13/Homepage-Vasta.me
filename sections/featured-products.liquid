{% comment %} ---- CSS (Estilos) ---- {% endcomment %}
<style>
  .featured-products-wrapper {
    padding: 60px 20px;
    background-color: {{ section.settings.background_color }};
  }

  .featured-products-title {
    font-size: 36px;
    font-weight: bold;
    color: {{ section.settings.title_color }};
    text-align: center;
    margin-top: 0;
    margin-bottom: 50px;
  }

  .featured-products-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* Cria 4 colunas */
    gap: 25px; /* Espaçamento entre os cards */
    max-width: 1200px;
    margin: 0 auto;
  }

  .product-card {
    background-color: #ffffff;
    border: 1px solid #E5E5E5;
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: #000;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.1);
  }

  .product-card__image-wrapper {
    width: 100%;
    padding-top: 100%; /* Mantém a proporção quadrada */
    position: relative;
    background-color: #f5f5f5;
  }

  .product-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover; /* Garante que a imagem cubra o espaço */
  }

  .product-card__info {
    padding: 20px;
    text-align: left;
  }

  .product-card__title {
    font-size: 16px;
    font-weight: 500;
    margin: 0 0 10px 0;
  }

  .product-card__reviews {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 14px;
    color: #666;
  }

  .product-card__stars {
    color: #FFD700; /* Cor das estrelas */
  }

  /* ---- Media Queries para Responsividade ---- */
  @media (max-width: 990px) {
    .featured-products-grid {
      grid-template-columns: repeat(2, 1fr); /* 2 colunas em tablets */
    }
  }

  @media (max-width: 600px) {
    .featured-products-grid {
      grid-template-columns: 1fr; /* 1 coluna em celulares */
    }
    .featured-products-title {
        font-size: 28px;
    }
  }
</style>

{% comment %} ---- HTML (A Estrutura) ---- {% endcomment %}
<div class="featured-products-wrapper">
  {% if section.settings.title != blank %}
    <h2 class="featured-products-title">
      {{ section.settings.title | escape }}
    </h2>
  {% endif %}

  <div class="featured-products-grid">
    {% for block in section.blocks %}
      {%- assign product = block.settings.product -%}
      {% if product != blank %}
        <a href="{{ product.url }}" class="product-card" {{ block.shopify_attributes }}>
          <div class="product-card__image-wrapper">
            {% if product.featured_image != blank %}
              <img 
                src="{{ product.featured_image | image_url: width: 500 }}" 
                alt="{{ product.featured_image.alt | escape }}"
                class="product-card__image"
                loading="lazy"
                width="500"
                height="500"
              >
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
          <div class="product-card__info">
            <h3 class="product-card__title">{{ product.title }}</h3>
            <div class="product-card__reviews">
              <span class="product-card__stars">★★★★★</span>
              <span class="product-card__review-text">{{ block.settings.review_text }}</span>
            </div>
          </div>
        </a>
      {% else %}
        {% comment %} Mostra um placeholder se nenhum produto for selecionado {% endcomment %}
        <div class="product-card">
           <div class="product-card__image-wrapper">
             {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg product-card__image' }}
           </div>
           <div class="product-card__info">
              <h3 class="product-card__title">Selecione um produto</h3>
              <div class="product-card__reviews">
                <span class="product-card__stars">★★★★★</span>
                <span>(0.0 de 0 Reviews)</span>
              </div>
           </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% comment %} ---- SCHEMA (Configurações Editáveis) ---- {% endcomment %}
{% schema %}
{
  "name": "Produtos em Destaque",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título da Seção",
      "default": "Best Selling Products"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Cor de Fundo",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Cor do Título",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Produto",
      "limit": 4,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Selecione o Produto"
        },
        {
          "type": "text",
          "id": "review_text",
          "label": "Texto da Avaliação",
          "default": "(5.0 Of 800 Reviews)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Produtos em Destaque",
      "blocks": [
        { "type": "product_card" },
        { "type": "product_card" },
        { "type": "product_card" },
        { "type": "product_card" }
      ]
    }
  ]
}
{% endschema %}