 <style>
    .header-wrapper
    {
        padding: 30px 120px;
        background-color: {{ section.settings.background_color }};
    }
    .header-main
    {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .header__logo-link
    {
        display: block;
        max-width: 140px;
    }
    .header__logo-image
    {
        width: 100%;
        height: auto;
    }
    .header__search
    {
        flex-grow: 0.5;
        max-width: 528px;
    }
    .header__search-form
    {
        display: flex;
        border: 1.5px solid #252525;
        border-radius: 999px;
        overflow: hidden;
        transform: translateX(-40px);
    }
    .header__search-input
    {
        border: none;
        outline: none;
        padding: 8px 20px;
        width: 100%;
        font-size: 16px;
        background-color: transparent;
        font-family: 'DM Sans', sans-serif;
    }
    .header__search-button
    {
        position: relative;
        border: none;
        background-color: #FFFFFF;
        padding: 8px 20px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 20px;
        border-top-left-radius: 25px;
        border-bottom-left-radius: 25px;
        border-left: 1.5px solid #252525 !important;
        transition: background-color 0.3ms ease, color 0.3ms
    }
    .header__search-button:hover
    {
        transform: scale(1.05); 
        background-color: #00AC4F;
    }
    .header__cart-link
    {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-decoration: none;
        color: #252525
    }
    .header__cart-icon-wrapper
    {
        position: relative;
    }
    .header__cart-count
    {
        position: absolute;
        top: -5px;
        right: -10px;
        background-color: #00AC4F;
        color: white;
        border-radius: 50%;
        font-size: 10px;
        font-weight: bold;
        font-family: 'DM Sans', sans-serif;
        height: 18px;
        width: 18;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .header__cart-text
    {
        font-size: 12px;
        font-weight: 500;
        margin-top: 2px;
        letter-spacing: 0.5px;
    }
    .header-nav
    {
        padding: 45px 0;
    }
    .header-nav__list
    {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        padding: 0;
        list-style: none;
    }
    .header-nav__link
    {
        padding: 5px 20px;
        text-decoration: none;
        color: #252525;
        font-size: 16px;
        font-weight: bold;
    }
    .header-nav__link:hover
    {
        text-decoration: underline;
    }
</style>

