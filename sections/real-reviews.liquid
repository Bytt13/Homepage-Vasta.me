  "presets": [
    {
      "name": "Avaliações Reais",
      "category": "Depoimentos",
      "blocks": [
        { "type": "review_card" },
        { "type": "review_card" },
        { "type": "review_card" },
        { "type": "review_card" }
      ]
    }
  ]
}
{% endschema %}