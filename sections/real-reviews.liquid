    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Cor de Fundo",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Cor do Título",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Cor do Subtítulo",
      "default": "#555555"
    }
  ],
  "blocks": [
    {
      "type": "review_card",
      "name": "Cartão de Avaliação",
